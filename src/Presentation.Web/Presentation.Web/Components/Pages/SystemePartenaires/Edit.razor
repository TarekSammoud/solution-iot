@page "/systeme-partenaires/edit/{id:guid}"
@using Application.DTOs
@using Application.DTOs.SystemePartenaire
@using Presentation.Web.Services
@inject SystemePartenaireApiService ApiService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Modifier Système Partenaire</PageTitle>

<h3>Modifier Système Partenaire</h3>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Chargement...</span>
        </div>
        <p>Chargement du système partenaire...</p>
    </div>
}
else
{
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Erreur !</strong> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null" aria-label="Close"></button>
        </div>
    }

    <EditForm Model="@model" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary class="text-danger" />

        <div class="mb-3">
            <label for="nom" class="form-label">Nom <span class="text-danger">*</span></label>
            <InputText id="nom" @bind-Value="model.Nom" class="form-control" placeholder="Nom du système partenaire" />
            <ValidationMessage For="@(() => model.Nom)" class="text-danger" />
        </div>

        <div class="mb-3">
            <label for="urlbase" class="form-label">URL de base <span class="text-danger">*</span></label>
            <InputText id="urlbase" @bind-Value="model.UrlBase" class="form-control" placeholder="https://exemple.com/api" />
            <ValidationMessage For="@(() => model.UrlBase)" class="text-danger" />
        </div>

        <div class="mb-3">
            <label class="form-label">Options</label>
            <div class="form-check form-check-inline">
                <InputCheckbox id="estAppelant" @bind-Value="model.EstAppelant" class="form-check-input" />
                <label for="estAppelant" class="form-check-label">Est Appelant</label>
            </div>
            <div class="form-check form-check-inline">
                <InputCheckbox id="estAppele" @bind-Value="model.EstAppele" class="form-check-input" />
                <label for="estAppele" class="form-check-label">Est Appelé</label>
            </div>
            <div class="form-check form-check-inline">
                <InputCheckbox id="estActif" @bind-Value="model.EstActif" class="form-check-input" />
                <label for="estActif" class="form-check-label">Actif</label>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Configuration Appelant</label>
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="usernameAppel" class="form-label">UsernameAppel</label>
                    <InputText id="usernameAppel" @bind-Value="model.UsernameAppel" class="form-control" placeholder="Nom d'utilisateur pour appel" />
                    <ValidationMessage For="@(() => model.UsernameAppel)" class="text-danger" />
                </div>
                <div class="col-md-6">
                    <label for="passwordChiffre" class="form-label">PasswordChiffre</label>
                    <InputText id="passwordChiffre" @bind-Value="model.PasswordChiffre" class="form-control" type="password" placeholder="Mot de passe chiffré" />
                    <ValidationMessage For="@(() => model.PasswordChiffre)" class="text-danger" />
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Configuration Appelé</label>
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="usernameAcces" class="form-label">UsernameAcces</label>
                    <InputText id="usernameAcces" @bind-Value="model.UsernameAcces" class="form-control" placeholder="Nom d'utilisateur d'accès" />
                    <ValidationMessage For="@(() => model.UsernameAcces)" class="text-danger" />
                </div>
                <div class="col-md-6">
                    <label for="passwordHashAcces" class="form-label">PasswordHashAcces</label>
                    <InputText id="passwordHashAcces" @bind-Value="model.PasswordHashAcces" class="form-control" placeholder="Hash du mot de passe" />
                    <ValidationMessage For="@(() => model.PasswordHashAcces)" class="text-danger" />
                </div>
            </div>
        </div>

        

        <div class="mt-4">
            <button type="submit" class="btn btn-primary" disabled="@isSaving">
                @if (isSaving)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                }
                else
                {
                    <span class="oi oi-check me-2" aria-hidden="true"></span>
                }
                Enregistrer
            </button>
            <button type="button" class="btn btn-secondary ms-2" @onclick="Cancel" disabled="@isSaving">
                <span class="oi oi-x me-2" aria-hidden="true"></span> Annuler
            </button>
        </div>
    </EditForm>
}

@code {
    [Parameter]
    public Guid Id { get; set; }

    private UpdateSystemePartenaireDto model = new();
    private string? originalPasswordChiffre;
    private string? originalPasswordHashAcces;
    private bool isLoading = true;
    private bool isSaving = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var systeme = await ApiService.GetByIdAsync(Id);

            if (systeme == null)
            {
                Navigation.NavigateTo("/systeme-partenaires");
                return;
            }

            model.Id = Id;
            model.Nom = systeme.Nom;
            model.UrlBase = systeme.UrlBase;
            model.UsernameAppel = systeme.UsernameAppel;
            originalPasswordChiffre = systeme.PasswordChiffre;
            model.PasswordChiffre = string.Empty;
            model.UsernameAcces = systeme.UsernameAcces;
            originalPasswordHashAcces = systeme.PasswordHashAcces;
            model.PasswordHashAcces = string.Empty;
            model.EstAppelant = systeme.EstAppelant;
            model.EstAppele = systeme.EstAppele;
            model.EstActif = systeme.EstActif;
            model.DateCreation = systeme.DateCreation;
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur lors du chargement du système partenaire : {ex.Message}";
            Console.WriteLine($"Erreur lors du chargement: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleValidSubmit()
    {
        isSaving = true;
        errorMessage = null;

        try
        {
            model.PasswordChiffre = string.IsNullOrWhiteSpace(model.PasswordChiffre) ? originalPasswordChiffre : model.PasswordChiffre;
            model.PasswordHashAcces = string.IsNullOrWhiteSpace(model.PasswordHashAcces) ? originalPasswordHashAcces : model.PasswordHashAcces;
            await ApiService.UpdateAsync(model);
            Navigation.NavigateTo("/systeme-partenaires?updated=1");
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"Erreur lors de la modification du système partenaire : {ex.Message}";
        }
        catch (Exception ex)
        {
            errorMessage = "Une erreur inattendue s'est produite. Veuillez réessayer.";
            Console.WriteLine($"Erreur lors de la modification: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/systeme-partenaires");
    }
}
