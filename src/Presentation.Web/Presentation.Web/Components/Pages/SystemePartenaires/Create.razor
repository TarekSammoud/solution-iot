@page "/systeme-partenaires/create"
@using Application.DTOs
@using Presentation.Web.Services
@inject SystemePartenaireApiService ApiService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Nouveau Système Partenaire</PageTitle>

<h3>Nouveau Système Partenaire</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Erreur !</strong> @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null" aria-label="Close"></button>
    </div>
}

<EditForm Model="@model" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary class="text-danger" />

    <div class="mb-3">
        <label for="nom" class="form-label">Nom <span class="text-danger">*</span></label>
        <InputText id="nom" @bind-Value="model.Nom" class="form-control" placeholder="Nom du système partenaire" />
        <ValidationMessage For="@(() => model.Nom)" class="text-danger" />
    </div>

    <div class="mb-3">
        <label for="urlbase" class="form-label">URL de base <span class="text-danger">*</span></label>
        <InputText id="urlbase" @bind-Value="model.UrlBase" class="form-control" placeholder="https://exemple.com/api" />
        <ValidationMessage For="@(() => model.UrlBase)" class="text-danger" />
    </div>

    <div class="mb-3">
        <label class="form-label">Appels sortants (nous → partenaire)</label>
        <div class="form-check form-switch mb-2">
            <InputCheckbox id="estappele" class="form-check-input" @bind-Value="model.EstAppele" />
            <label class="form-check-label" for="estappele">Peut être appelé</label>
        </div>
        <div class="row g-3">
            <div class="col-md-6">
                <label for="usernameAppel" class="form-label">Username appel</label>
                <InputText id="usernameAppel" @bind-Value="model.UsernameAppel" class="form-control" placeholder="Nom d'utilisateur pour appel" />
                <ValidationMessage For="@(() => model.UsernameAppel)" class="text-danger" />
            </div>
            <div class="col-md-6">
                <label for="passwordChiffre" class="form-label">Password (chiffré)</label>
                <InputText id="passwordChiffre" @bind-Value="model.PasswordChiffre" class="form-control" type="password" placeholder="Mot de passe chiffré" />
                <ValidationMessage For="@(() => model.PasswordChiffre)" class="text-danger" />
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Appels entrants (partenaire → nous)</label>
        <div class="form-check form-switch mb-2">
            <InputCheckbox id="estappelant" class="form-check-input" @bind-Value="model.EstAppelant" />
            <label class="form-check-label" for="estappelant">Peut nous appeler</label>
        </div>
        <div class="row g-3">
            <div class="col-md-6">
                <label for="usernameAcces" class="form-label">Username accès</label>
                <InputText id="usernameAcces" @bind-Value="model.UsernameAcces" class="form-control" placeholder="Nom d'utilisateur d'accès" />
                <ValidationMessage For="@(() => model.UsernameAcces)" class="text-danger" />
            </div>
            <div class="col-md-6">
                <label for="passwordHashAcces" class="form-label">Password hash accès</label>
                <InputText id="passwordHashAcces" @bind-Value="model.PasswordHashAcces" class="form-control" placeholder="Hash du mot de passe" />
                <ValidationMessage For="@(() => model.PasswordHashAcces)" class="text-danger" />
            </div>
        </div>
    </div>

    <div class="form-check form-switch mb-4">
        <InputCheckbox id="estActif" class="form-check-input" @bind-Value="model.EstActif" />
        <label class="form-check-label" for="estActif">Actif</label>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary" disabled="@isSaving">
            @if (isSaving)
            {
                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
            }
            else
            {
                <span class="oi oi-check me-2" aria-hidden="true"></span>
            }
            Créer
        </button>
        <button type="button" class="btn btn-secondary ms-2" @onclick="Cancel" disabled="@isSaving">
            <span class="oi oi-x me-2" aria-hidden="true"></span> Annuler
        </button>
    </div>
</EditForm>

@code {
    private CreateSystemePartenaireDto model = new();
    private bool isSaving = false;
    private string? errorMessage;

    private async Task HandleValidSubmit()
    {
        isSaving = true;
        errorMessage = null;

        try
        {
            await ApiService.CreateAsync(model);
            Navigation.NavigateTo("/systeme-partenaires");
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"Erreur lors de la création du système partenaire : {ex.Message}";
        }
        catch (Exception ex)
        {
            errorMessage = "Une erreur inattendue s'est produite. Veuillez réessayer.";
            Console.WriteLine($"Erreur lors de la création: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/systeme-partenaires");
    }
}
