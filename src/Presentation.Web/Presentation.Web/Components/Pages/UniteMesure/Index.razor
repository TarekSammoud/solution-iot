@page "/unitemesure"
@using Application.DTOs
@using Application.DTOs.UniteMesure
@using Domain.Enums
@using Presentation.Web.Services
@inject UniteMesureApiService ApiService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Unités de mesure</PageTitle>

<h3>Unités de mesure</h3>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center">
        <label class="me-2">Filtrer par type</label>
        <InputSelect @bind-Value="selectedType" class="form-select form-select-sm" @onchange="FilterChanged">
            <option value="">Tous</option>
            @foreach (var t in Enum.GetValues<TypeSonde>())
            {
                <option value="@t">@t</option>
            }
        </InputSelect>
    </div>
    <button class="btn btn-primary" @onclick="NavigateToCreate">
        <span class="oi oi-plus" aria-hidden="true"></span> Créer une unité
    </button>
    
</div>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Chargement...</span>
        </div>
        <p>Chargement des unités...</p>
    </div>
}
else if (unites.Count == 0)
{
    <div class="alert alert-info" role="alert">
        Aucune unité trouvée.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Symbole</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Date de création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in unites)
            {
                var uid = u.Id;
                <tr>
                    <td>@u.Symbole</td>
                    <td>@u.Nom</td>
                    <td>@u.TypeSonde</td>
                    <td>@u.DateCreation.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <a href="/unitemesure/edit/@uid" class="btn btn-sm btn-warning">
                            <span class="oi oi-pencil" aria-hidden="true"></span> Modifier
                        </a>
                        <a href="/unitemesure/delete/@uid" class="btn btn-sm btn-danger ms-2">
                            <span class="oi oi-trash" aria-hidden="true"></span> Supprimer
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<UniteMesureDto> unites = new();
    private bool isLoading = true;
    private TypeSonde? selectedType;

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        try
        {
            unites = await ApiService.GetAllAsync(selectedType);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task FilterChanged(ChangeEventArgs args)
    {
        await LoadAsync();
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/unitemesure/create");
    }
}
