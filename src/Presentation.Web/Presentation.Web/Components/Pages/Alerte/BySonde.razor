@page "/alerte/sonde/{SondeId:guid}"
@inject Presentation.Web.Services.AlerteApiService AlerteApi
@inject Presentation.Web.Services.SondeApiService SondeApi
@inject NavigationManager Navigation
@using Domain.Enums
@using Application.DTOs.Alertes
@using Application.DTOs.Sonde

<h3>Alertes pour la sonde @(Sonde?.Nom ?? SondeId.ToString())</h3>

<div class="row mb-3">
    <div class="col-md-3">
        <label>Filtrer par statut</label>
        <select class="form-select" @bind="FiltreStatut" @bind:event="onchange">
            <option value="">Toutes</option>
            <option value="Active">Active</option>
            <option value="Acquittee">Acquittee</option>
            <option value="Resolue">Resolue</option>
        </select>
    </div>
    <div class="col-md-3">
        <label>Filtrer par type seuil</label>
        <select class="form-select" @bind="FiltreTypeSeuil" @bind:event="onchange">
            <option value="">Tous</option>
            <option value="Minimum">Minimum</option>
            <option value="Maximum">Maximum</option>
        </select>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Type Seuil</th>
            <th>Valeur</th>
            <th>Statut</th>
            <th>Date création</th>
            <th>Date résolution</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in AlertesFiltrees)
        {
            var (valeurMesuree, _) = ParseMessage(a.Message);
            <tr>
                <td>@a.TypeSeuil</td>
                <td>@valeurMesuree</td>
                <td>
                    <span class="badge @GetBadge(a.Statut)">@a.Statut</span>
                </td>
                <td>@a.DateCreation</td>
                <td>@a.DateResolution</td>
                <td>
                    <button class="btn btn-sm btn-warning me-1" @onclick="() => Acquitter(a.Id)">Acquitter</button>
                    <button class="btn btn-sm btn-success me-1" @onclick="() => Resoudre(a.Id)">Résoudre</button>
                    <button class="btn btn-sm btn-info" @onclick="() => NavigateToDetails(a.Id)">Détails</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    [Parameter] public Guid SondeId { get; set; }

    private SondeDto? Sonde;
    private List<AlerteDto> Alertes = new();
    private string? FiltreStatut;
    private string? FiltreTypeSeuil;

    private IEnumerable<AlerteDto> AlertesFiltrees => Alertes
        .Where(a => string.IsNullOrEmpty(FiltreStatut) || Enum.TryParse<StatutAlerte>(FiltreStatut, out var s) && a.Statut == s)
        .Where(a => string.IsNullOrEmpty(FiltreTypeSeuil) || Enum.TryParse<TypeSeuil>(FiltreTypeSeuil, out var t) && a.TypeSeuil == t);

    protected override async Task OnInitializedAsync()
    {
        Sonde = await SondeApi.GetByIdAsync(SondeId);
        Alertes = (await AlerteApi.GetBySondeAsync(SondeId, null, null)).ToList();
    }

    private string GetBadge(StatutAlerte statut) => statut switch
    {
        StatutAlerte.Active => "bg-danger",
        StatutAlerte.Acquittee => "bg-warning",
        StatutAlerte.Resolue => "bg-success",
        _ => "bg-secondary"
    };

    private async Task Acquitter(Guid id)
    {
        try
        {
            await AlerteApi.AcquitterAsync(id);
            Alertes = (await AlerteApi.GetBySondeAsync(SondeId, null, null)).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur lors de l'acquittement: {ex.Message}");
        }
    }

    private async Task Resoudre(Guid id)
    {
        try
        {
            await AlerteApi.ResoudreAsync(id);
            Alertes = (await AlerteApi.GetBySondeAsync(SondeId, null, null)).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur lors de la résolution: {ex.Message}");
        }
    }

    private void NavigateToDetails(Guid alerteId)
    {
        Navigation.NavigateTo($"/alerte/details/{alerteId}");
    }

    private (string valeurMesuree, string seuil) ParseMessage(string? message)
    {
        if (string.IsNullOrEmpty(message))
            return ("N/A", "N/A");

        try
        {
            // Message format: "Valeur {valeurMesuree} détectée le {date} {(en dessous|au-dessus)} du seuil ({valeurSeuil})"
            var parts = message.Split(' ');
            if (parts.Length >= 2)
            {
                var valeurMesuree = parts[1]; // "Valeur" is parts[0]
                
                // Find the threshold value in parentheses at the end
                var lastPart = parts[^1];
                if (lastPart.StartsWith("(") && lastPart.EndsWith(")"))
                {
                    var seuil = lastPart.Trim('(', ')');
                    return (valeurMesuree, seuil);
                }
            }
        }
        catch
        {
            // If parsing fails, return the original message as fallback
        }

        return ("N/A", "N/A");
    }
}
