@page "/utilisateurs"
@using Application.DTOs.User
@using Domain.Enums
@using Presentation.Web.Services
@inject UserApiService ApiService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Utilisateurs</PageTitle>

<h3>Utilisateurs</h3>

<div class="mb-3">
    <label>Email ou username:</label>
    <input @bind="searchString" class="form-control" style="max-width:300px;" />
    <button class="btn btn-primary mt-2" @onclick="PerformSearch">Filtrer</button>
</div>


<div class="mb-3">
    <button class="btn btn-primary" @onclick="NavigateToCreate">
        <span class="oi oi-plus" aria-hidden="true"></span> Nouvel utilisateur
    </button>
</div>

@if (stats != null)
{
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5>Total utilisateurs</h5>
                    <h2>@stats.TotalUsers</h2>
                </div>
            </div>
        </div>

        @foreach (var role in stats.UsersByRole)
        {
            <div class="col-md-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h6>@role.Key</h6>
                        <h3>@role.Value</h3>
                    </div>
                </div>
            </div>
        }
    </div>
}


@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status"></div>
        <p>Chargement des utilisateurs...</p>
    </div>
}
else if (users.Count == 0)
{
    <div class="alert alert-info" role="alert">
        Aucun utilisateur trouvé. Cliquez sur "Nouvel utilisateur" pour en créer un.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th @onclick="@(() => Sort("Username"))" style="cursor:pointer">
                    Username @SortIndicator("Username")
                </th>

                <th @onclick="@(() => Sort("Email"))" style="cursor:pointer">
                    Email @SortIndicator("Email")
                </th>

                <th @onclick="@(() => Sort("Role"))" style="cursor:pointer">
                    Rôle @SortIndicator("Role")
                </th>

                <th @onclick="@(() => Sort("EstActif"))" style="cursor:pointer">
                    Actif @SortIndicator("EstActif")
                </th>

                <th>Actions</th>
            </tr>
        </thead>




        <tbody>
            @foreach (var user in users)
            {
                var userId = user.Id;
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.Role == RoleUtilisateur.Administrateur)
                        {
                            <span class="badge bg-success">Administrateur</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">@user.Role</span>
                        }
                    </td>

                    <td>@(user.EstActif ? "Oui" : "Non")</td>
                    <td>
                        <a href="/utilisateurs/edit/@userId" class="btn btn-sm btn-warning">
                            <span class="oi oi-pencil" aria-hidden="true"></span> Modifier
                        </a>
                        <a href="/utilisateurs/delete/@userId" class="btn btn-sm btn-danger ms-2">
                            <span class="oi oi-trash" aria-hidden="true"></span> Supprimer
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private string sortColumn = "Username"; 
    private bool sortAscending = true;
	private string? searchString = "";
    private List<UserDto> users = new();
    private bool isLoading = true;

    private UserStatsDto? stats;




    protected override async Task OnInitializedAsync()
    {


        try
        {
            users = await ApiService.GetAllAsync();
            stats = await ApiService.GetStatsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur lors du chargement des utilisateurs : {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private MarkupString SortIndicator(string column)
    {
        if (column != sortColumn) return new MarkupString("");

        var arrow = sortAscending ? "▲" : "▼";
        return new MarkupString($"<span style='margin-left:4px'>{arrow}</span>");
    }

    private void Sort(string column)
    {
        if (sortColumn == column)
        {
            sortAscending = !sortAscending;
        }
        else
        {
            sortColumn = column;
            sortAscending = true;
        }

        users = sortColumn switch
        {
            "Username" => (sortAscending
                ? users.OrderBy(u => u.Username)
                : users.OrderByDescending(u => u.Username)).ToList(),

            "Email" => (sortAscending
                ? users.OrderBy(u => u.Email)
                : users.OrderByDescending(u => u.Email)).ToList(),

            "Role" => (sortAscending
                ? users.OrderBy(u => u.Role)
                : users.OrderByDescending(u => u.Role)).ToList(),

            "EstActif" => (sortAscending
                ? users.OrderBy(u => u.EstActif)
                : users.OrderByDescending(u => u.EstActif)).ToList(),

            _ => users
        };
    }


    private async Task PerformSearch()
    {
        isLoading = true;

        try
        {
            if (!string.IsNullOrWhiteSpace(searchString))
                users = await ApiService.SearchUsersAsync(searchString);
            else
                users = await ApiService.GetAllAsync();
        }
        finally
        {
            isLoading = false;
        }
    }




    private void NavigateToCreate() => Navigation.NavigateTo("/utilisateurs/create");
}
