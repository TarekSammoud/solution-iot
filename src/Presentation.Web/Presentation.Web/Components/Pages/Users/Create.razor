@page "/utilisateurs/create"
@using Application.DTOs.User
@using Domain.Enums
@using Presentation.Web.Services
@inject UserApiService ApiService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Nouvel Utilisateur</PageTitle>

<h3>Créer un utilisateur</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Erreur !</strong> @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null" aria-label="Close"></button>
    </div>
}

<EditForm Model="@model" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary class="text-danger" />

    <!-- USERNAME -->
    <div class="mb-3">
        <label class="form-label">Nom d'utilisateur <span class="text-danger">*</span></label>
        <InputText @bind-Value="model.Username" class="form-control" placeholder="ex: tarek.s" />
        <ValidationMessage For="@(() => model.Username)" class="text-danger" />
    </div>

    <!-- EMAIL -->
    <div class="mb-3">
        <label class="form-label">Email <span class="text-danger">*</span></label>
        <InputText @bind-Value="model.Email" class="form-control" placeholder="ex: user@example.com" />
        <ValidationMessage For="@(() => model.Email)" class="text-danger" />
    </div>

    <!-- PASSWORD -->
    <div class="mb-3">
        <label class="form-label">Mot de passe <span class="text-danger">*</span></label>
        <InputText @bind-Value="model.PasswordHash" type="password" class="form-control" placeholder="***********" />
        <ValidationMessage For="@(() => model.PasswordHash)" class="text-danger" />
    </div>

    <!-- ROLE -->
    <div class="mb-3">
        <label class="form-label">Rôle <span class="text-danger">*</span></label>
        <InputSelect @bind-Value="model.Role" class="form-select">
            @foreach (var value in Enum.GetValues(typeof(RoleUtilisateur)))
            {
                <option value="@value">@value</option>
            }
        </InputSelect>
        <ValidationMessage For="@(() => model.Role)" class="text-danger" />
    </div>

    <!-- EST ACTIF -->
    <div class="form-check mb-3">
        <InputCheckbox @bind-Value="model.EstActif" class="form-check-input" id="isActive" />
        <label for="isActive" class="form-check-label">Compte actif</label>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary" disabled="@isSaving">
            @if (isSaving)
            {
                <span class="spinner-border spinner-border-sm me-2"></span>
            }
            Créer
        </button>

        <button type="button" class="btn btn-secondary ms-2" @onclick="Cancel" disabled="@isSaving">
            Annuler
        </button>
    </div>
</EditForm>

@code {
    private CreateUserDto model = new();
    private bool isSaving = false;
    private string? errorMessage;

    private async Task HandleValidSubmit()
    {
        isSaving = true;
        errorMessage = null;

        try
        {
            await ApiService.CreateAsync(model);
            Navigation.NavigateTo("/utilisateurs");
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"Erreur lors de la création de l'utilisateur : {ex.Message}";
        }
        catch (Exception ex)
        {
            errorMessage = "Une erreur inattendue s'est produite.";
            Console.WriteLine($"Erreur création utilisateur : {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/utilisateurs");
    }
}