@page "/utilisateurs/delete/{id:guid}"
@using Application.DTOs.User
@using Presentation.Web.Services
@using Domain.Enums
@inject UserApiService ApiService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Supprimer Utilisateur</PageTitle>

<h3>Supprimer Utilisateur</h3>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Chargement...</span>
        </div>
        <p>Chargement de l'utilisateur...</p>
    </div>
}
else if (utilisateur == null)
{
    <div class="alert alert-warning" role="alert">
        L'utilisateur n'existe pas ou a déjà été supprimé.
    </div>
    <button class="btn btn-secondary" @onclick="Cancel">
        Retour à la liste
    </button>
}
else
{
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">⚠ Attention !</h4>
        <p>Êtes-vous sûr de vouloir supprimer cet utilisateur ?</p>
        <p><strong>Cette action est irréversible.</strong></p>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Erreur :</strong> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header">
            <h5>Détails de l'utilisateur</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID :</dt>
                <dd class="col-sm-9">@utilisateur.Id</dd>

                <dt class="col-sm-3">Username :</dt>
                <dd class="col-sm-9">@utilisateur.Username</dd>

                <dt class="col-sm-3">Email :</dt>
                <dd class="col-sm-9">@utilisateur.Email</dd>

                <dt class="col-sm-3">Rôle :</dt>
                <dd class="col-sm-9">@utilisateur.Role</dd>

                <dt class="col-sm-3">Actif :</dt>
                <dd class="col-sm-9">
                    @if (utilisateur.EstActif)
                    {
                        <span class="badge bg-success">Actif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactif</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <button class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
            @if (isDeleting)
            {
                <span class="spinner-border spinner-border-sm me-2"></span>
            }
            Supprimer définitivement
        </button>

        <button class="btn btn-secondary ms-2" @onclick="Cancel" disabled="@isDeleting">
            Annuler
        </button>
    </div>
}

@code {
    [Parameter] public Guid Id { get; set; }

    private UserDto? utilisateur; 
    private bool isLoading = true;
    private bool isDeleting = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            utilisateur = await ApiService.GetByIdAsync(Id);
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur lors du chargement : {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ConfirmDelete()
    {
        isDeleting = true;
        errorMessage = null;

        try
        {
            var success = await ApiService.DeleteAsync(Id);
            if (success)
                Navigation.NavigateTo("/utilisateurs");
            else
                errorMessage = "La suppression a échoué.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur lors de la suppression : {ex.Message}";
        }
        finally
        {
            isDeleting = false;
        }
    }

    private void Cancel() => Navigation.NavigateTo("/utilisateurs");
}
