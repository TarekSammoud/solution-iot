@page "/releves"
@using Application.DTOs.Releve
@using Application.DTOs.Sonde
@using Application.DTOs.Releve
@using System.Threading.Tasks
@inject ReleveApiService ApiService
@inject NavigationManager Navigation
@rendermode InteractiveServer


<div class="mb-3">
    <button class="btn btn-primary" @onclick="NavigateToCreate">
        <span class="oi oi-plus" aria-hidden="true"></span> Nouvelle localisation
    </button>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Sonde</th>
            <th>Valeur</th>
            <th>Date Heure</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var releve in releves)
        {
            var releveId = releve.Id;
            <tr>
                <td>@releve.Sonde.Nom</td>
                <td>@releve.Valeur</td>
                <td>@releve.DateHeure.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a href="/releves/edit/@releveId" class="btn btn-sm btn-warning">
                        <span class="oi oi-pencil" aria-hidden="true"></span> Modifier
                    </a>
                    <a href="/releves/delete/@releveId" class="btn btn-sm btn-danger ms-2">
                        <span class="oi oi-trash" aria-hidden="true"></span> Supprimer
                    </a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot class="my-2">
        <button class="btn btn-primary mx-1" @onclick=" ()=>Paginate(-1)">prev</button>
        <button class="btn btn-outline-primary" >@currentPage</button    
        <button class="btn btn-primary mx-1" @onclick="()=>Paginate(1)">next</button>
    </tfoot>
</table>



@code{
    List<ReleveDto> releves = new();
    int currentPage = 0;
    int limit = 5;
    protected override async Task OnInitializedAsync()
    {
        releves = await ApiService.GetAllAsync(currentPage ,limit);
    }
    private async Task Paginate(int x)
    {
        if (currentPage+x >=0)    
        {    
            currentPage += x;
            await OnInitializedAsync();
        }
    }
      /// <summary>
    /// Navigue vers la page de création d'une nouvelle localisation.
    /// </summary>
    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/releves/create");
    }

    /// <summary>
    /// Navigue vers la page d'édition d'une localisation.
    /// </summary>
    /// <param name="id">L'identifiant de la localisation à modifier.</param>
    private void NavigateToEdit(Guid id)
    {
