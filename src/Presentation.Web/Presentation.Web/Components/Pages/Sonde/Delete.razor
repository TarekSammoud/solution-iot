@page "/sonde/delete/{id:guid}"
@using Application.DTOs.Sonde
@using Application.DTOs.Localisation
@using Application.DTOs.UniteMesure
@using Domain.Enums
@using Presentation.Web.Services
@inject SondeApiService ApiService
@inject LocalisationApiService LocalisationService
@inject UniteMesureApiService UniteMesureService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Supprimer Localisation</PageTitle>

<h3>Supprimer Localisation</h3>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Chargement...</span>
        </div>
        <p>Chargement de la localisation...</p>
    </div>
}
else if (localisation == null)
{
    <div class="alert alert-warning" role="alert">
        La localisation demandée n'existe pas ou a déjà été supprimée.
    </div>
    <button class="btn btn-secondary" @onclick="Cancel">
        Retour à la liste
    </button>
}
else
{
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">
            <span class="oi oi-warning me-2" aria-hidden="true"></span>
            Attention !
        </h4>
        <p>Êtes-vous sûr de vouloir supprimer cette localisation ?</p>
        <p class="mb-0"><strong>Cette action est irréversible.</strong></p>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Erreur !</strong> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5>Détails de la localisation</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nom :</dt>
                <dd class="col-sm-9">@localisation.Nom</dd>

                <dt class="col-sm-3">Description :</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(localisation.Description))
                    {
                        @localisation.Description
                    }
                    else
                    {
                        <em class="text-muted">Aucune description</em>
                    }
                </dd>

                <dt class="col-sm-3">Date de création :</dt>
                <dd class="col-sm-9">@localisation.DateCreation.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <button class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
            @if (isDeleting)
            {
                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
            }
            else
            {
                <span class="oi oi-trash me-2" aria-hidden="true"></span>
            }
            Supprimer définitivement
        </button>
        <button class="btn btn-secondary ms-2" @onclick="Cancel" disabled="@isDeleting">
            <span class="oi oi-x me-2" aria-hidden="true"></span> Annuler
        </button>
    </div>
}

@code {
    /// <summary>
    /// Paramètre de route : identifiant de la localisation à supprimer.
    /// </summary>
    [Parameter]
    public Guid Id { get; set; }

    private LocalisationDto? localisation;
    private bool isLoading = true;
    private bool isDeleting = false;
    private string? errorMessage;

    /// <summary>
    /// Méthode appelée lors de l'initialisation du composant.
    /// Charge la localisation à supprimer depuis l'API.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            localisation = await LocalisationService.GetByIdAsync(Id);

            if (localisation == null)
            {
                // La localisation n'existe pas, on l'affiche dans le markup
                Console.WriteLine($"Localisation {Id} non trouvée");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur lors du chargement de la localisation : {ex.Message}";
            Console.WriteLine($"Erreur lors du chargement: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    /// <summary>
    /// Confirme et exécute la suppression de la localisation.
    /// Appelle l'API pour supprimer la localisation et redirige vers la liste.
    /// </summary>
    private async Task ConfirmDelete()
    {
        isDeleting = true;
        errorMessage = null;

        try
        {
            var success = await ApiService.DeleteAsync(Id);

            if (success)
            {
                Navigation.NavigateTo("/localisations");
            }
            else
            {
                errorMessage = "La suppression a échoué. La localisation n'existe peut-être plus.";
            }
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"Erreur lors de la suppression de la localisation : {ex.Message}";
        }
        catch (Exception ex)
        {
            errorMessage = "Une erreur inattendue s'est produite. Veuillez réessayer.";
            Console.WriteLine($"Erreur lors de la suppression: {ex.Message}");
        }
        finally
        {
            isDeleting = false;
        }
    }

    /// <summary>
    /// Annule la suppression et retourne à la liste des localisations.
    /// </summary>
    private void Cancel()
    {
        Navigation.NavigateTo("/localisations");
    }
}
